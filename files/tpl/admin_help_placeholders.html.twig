<h3>{{ langHeader }}</h3>
{% set counter = 1 %}
<div>
    <div style="float: left; width: 33%;">
        <ul>
            {% for ph in placeholders %}
            <li>{{ ph }}</li>
                {% if counter >= placeholders|length / 3 %}
                    {% set counter = 1 %}
                    </ul></div><div style="float: left; width: 33%;"><ul>
                {% else %}
                    {% set counter = counter+1 %}
                {% endif %}
            {% endfor %}
        </ul>
    </div>
    <div style="clear: both;"></div>
</div>